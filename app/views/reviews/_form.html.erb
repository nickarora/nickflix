<%= form_for([@movie, @review]) do |f| %>

  <%= render "shared/errors", object: @review %> 

  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
      	<%= f.label :stars %>
      	<% Review::STARS.each do |star| %>
      		<span class="stars">
      			<%= f.radio_button :stars, star %> <%= star %>
    		</span>
      	<% end %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, rows: 7, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Post Review' %>
      <%= link_to "Cancel", movie_path(@movie), class: 'button' %>
    </p>
  </fieldset>
<% end %>